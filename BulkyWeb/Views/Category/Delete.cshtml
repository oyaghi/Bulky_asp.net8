@model Category

<form method="post">
    @*     <input asp-for="Id" hidden /> we have to put this line if the Id for the model was Category Id i.e if it is just Id then you don't have to put this line '
    *@
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />

            <div asp-validation-summary="ModelOnly"></div>

        </div>
        <div class="mb-3 row">
            <label asp-for="Name" class="p-0">Category Name</label>
            <input asp-for="Name" class="form-control" disabled/>
        </div>
        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="p-0">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" disabled />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn form-control btn-danger">Delete</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control border">Back to List</a>

            </div>
        </div>
    </div>
</form>


